{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/src/index.js",
    "build": "npx tsc -p tsconfig.build.json",
    "build:dev": "npx tsc -p tsconfig.build.json && node --watch dist/src/index.js",
    "dev": "npx tsx --watch src/index.ts",
    "type-check": "npx tsc --noEmit",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "db:generate": "npx drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "npx drizzle-kit migrate --config=drizzle.config.ts",
    "db:studio": "npx drizzle-kit studio --config=drizzle.config.ts",
    "test": "npx jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@arcjet/inspect": "^1.0.0-beta.15",
    "@arcjet/node": "^1.0.0-beta.15",
    "@neondatabase/serverless": "^1.0.2",
    "@tsconfig/node22": "^22.0.5",
    "@types/winston": "^2.4.4",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "lint-staged": "^16.2.7",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "winston": "^3.19.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "lint-staged": {
    "*.{ts}": [
      "npx eslint",
      "npx prettier --check"
    ],
    "*.{toml,json,md,yml,yaml,md}": [
      "npx prettier --check"
    ]
  }
}
