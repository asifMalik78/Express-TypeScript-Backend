{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution":"node",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "#config/*": ["./config/*"],
      "#constants/*": ["./constants/*"],
      "#controllers/*": ["./controllers/*"],
      "#middleware/*": ["./middleware/*"],
      "#models/*": ["./models/*"],
      "#routes/*": ["./routes/*"],
      "#services/*": ["./services/*"],
      "#types/*": ["./types/*"],
      "#utils/*": ["./utils/*"],
      "#validations/*": ["./validations/*"],
      "#tests/*": ["./tests/*"],
      "#src/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts"]
}
